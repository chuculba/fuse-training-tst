          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.0.0 http://karaf.apache.org/xmlns/features/v1.0.0"
          name="com.fusesource.training">

    <!-- import other features files -->
    <repository>mvn:org.apache.servicemix/apache-servicemix/${servicemix.version}/xml/features</repository>

    <feature name="camel-exercise-cbr">
        <feature version="2.10.0.redhat-60023">camel-core</feature>
        <bundle>mvn:org.jboss.fuse.training/camel-exercise-cbr/1.0</bundle>
    </feature>

    <feature name="camel-exercise-cbr-endpoints">
        <feature version="2.10.0.redhat-60023">camel-core</feature>
        <bundle>mvn:org.jboss.fuse.training/camel-exercise-cbr-endpoints/1.0</bundle>
    </feature>

    <feature name="camel-exercise-exception">
        <feature version="2.10.0.redhat-60023">camel-core</feature>
        <bundle>mvn:org.jboss.fuse.training/camel-exercise-exception/1.0</bundle>
    </feature>

    <feature name="camel-exercise-webservice">
        <feature version="2.10.0.redhat-60023">camel-core</feature>
        <feature version="2.10.0.redhat-60023">camel-soap</feature>
