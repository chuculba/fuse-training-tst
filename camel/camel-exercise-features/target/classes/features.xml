    <feature name="camel-exercise-jdbc-jms-transaction">
        <feature version="2.10.0.redhat-60023">camel-core</feature>
        <feature version="2.10.0.redhat-60023">camel-jms</feature>
        <feature version="2.10.0.redhat-60023">camel-jaxb</feature>
        <bundle>mvn:org.springframework/spring-jdbc/${spring.version}</bundle>
        <bundle>wrap:mvn:postgresql/postgresql/${postgres.version}</bundle>
        <bundle>mvn:org.jboss.fuse.training/camel-exercise-jdbc-jms-transaction/1.0</bundle>
