    <feature name="camel-exercise-cache">
        <feature version="2.10.0.redhat-60023">camel-cache</feature>
        <bundle>mvn:org.jboss.fuse.training/camel-exercise-cache/1.0</bundle>
    </feature>

    <feature name="camel-exercise-ws-proxy">
        <feature>http</feature>
        <feature version="2.10.0.redhat-60023">camel-http</feature>
        <feature version="2.10.0.redhat-60023">camel-cxf</feature>
        <bundle>mvn:org.jboss.fuse.training/camel-exercise-ws-proxy/1.0</bundle>
    </feature>

    <feature name="camel-exercise-wssecurity">
        <feature>http</feature>
        <feature version="2.10.0.redhat-60023">camel-cxf</feature>
        <feature version="2.10.0.redhat-60023">camel-velocity</feature>
        <feature>saaj</feature>
        <bundle>mvn:org.jboss.fuse.training/camel-exercise-wssecurity/1.0</bundle>
    </feature>

    <feature name="camel-exercise-splitter">
        <feature version="2.10.0.redhat-60023">camel-core</feature>
